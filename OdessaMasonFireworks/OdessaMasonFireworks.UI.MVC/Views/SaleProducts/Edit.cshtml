@model OdessaMasonFireworks.DATA.EF.Models.SaleProduct

@{
    ViewData["Title"] = "Edit SaleProduct #" + Model.SaleProductId;
}

<header class="py-3" style="background-image: url(/assets/fireworks.jpg); background-size: cover;">
    <div class="container px-4">
        <div class="text-center custom-gold">
            <h1 class="display-4 fw-bolder">Edit SaleProduct #@Model.SaleProductId</h1>
        </div>
    </div>
</header>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SaleProductId" />
            <div class="form-group">
                <label asp-for="SaleId" class="control-label"></label>
                <select asp-for="SaleId" class="form-control" asp-items="ViewBag.SaleId"></select>
                <span asp-validation-for="SaleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleQuantity" class="control-label"></label>
                <input asp-for="SaleQuantity" class="form-control" />
                <span asp-validation-for="SaleQuantity" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning btn-outline-dark" />
            </div>
        </form>
        <div class="my-2">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
