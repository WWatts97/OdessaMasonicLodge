@{
    ViewData["Title"] = "Home Page";
}



<!-- Header-->
<header class="py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center fadein">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder  mb-2 custom-gold text-center">Mt. Hope Masonic Lodge Odessa Missouri</h1>
                    <p class="lead fw-normal custom-gold text-center mb-4">Located at 6898 N 131 Hwy in Odessa MO, this brotherhood has a focus to help the surrounding community, such as giving scholarships, and hosting a breakfast with santa.</p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                        <a class="btn custom-blue btn-lg px-4 custom-gold" asp-action="Rent" asp-controller="Members">Rent our lodge</a>
                        <a class="btn custom-blue btn-lg px-4 custom-gold" asp-action="Contact" asp-controller="Home">Contact us</a>
@*                        <a class="btn custom-blue btn-lg px-4 custom-gold" asp-action="TiledMembers" asp-controller="Members">Our members</a>
*@                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="insignia rounded-5 my-5" src="~/assets/lodgeinsignia.jpg" alt="..." /></div>
        </div>
    </div>
</header>
<!-- Testimonial section-->
<div class="py-1 bg-light fadein">
    <div class="container px-5 my-4">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-10 col-xl-7">
                <div class="text-center">
                    <div class="fs-4 mb-4 fst-italic">“To enlarge the sphere of social happiness is worthy of the benevolent design of a Masonic institution; and it is most fervently to be wished, that the conduct of every member of the fraternity, as well as those publications, that discover the principles which actuate them, may tend to convince mankind that the grand object of Masonry is to promote the happiness of the human race.”</div>
                    <div class="d-flex align-items-center justify-content-center">
                        <img class="rounded-circle me-3" style="height: 40px; width: 40px;" src="/assets/GW.jpg" alt="..." />
                        <div class="fw-bold">
                            George Washington
                            <span class="fw-bold text-primary mx-1">/</span>
                            1st President of the United States of America
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Features section-->
<section class="py-5 fadein" id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0 custom-gold text-center">Giving to the community that serves us.</h2></div>
            <div class="col-lg-8">
                <div class="row gx-5 row-cols-1 row-cols-md-2">
                    <div class="col mb-5 h-100 smallcenter">
                        <div class="feature custom-blue custom-gold rounded-3 mb-3"><i class="bi bi-cash-stack"></i></div>
                        <h2 class="h5 custom-gold">Scholarships</h2>
                        <p class="mb-0 custom-gold">Helping those who show excellent potential, by working hard and creating opportunities.</p>
                    </div>
                    <div class="col mb-5 h-100 smallcenter">
                        <div class="feature custom-blue custom-gold rounded-3 mb-3"><i class="bi bi-gift"></i></div>
                        <h2 class="h5 custom-gold">Breakfast with Santa</h2>
                        <p class="mb-0 custom-gold">Feeding and giving gifts to those who may not be able to do it themselves.</p>
                    </div>
                    <div class="col mb-5 h-100 smallcenter">
                        <div class="feature custom-blue custom-gold rounded-3 mb-3"><i class="bi bi-bank"></i></div>
                        <h2 class="h5 custom-gold">Renting</h2>
                        <p class="mb-0 custom-gold">Renting our lodge to ensure that memories are made.</p>
                    </div>
                    <div class="col mb-5 mb-md-0 h-100 smallcenter">
                        <div class="feature custom-gold custom-blue rounded-3 mb-3"><i class="bi bi-currency-dollar"></i></div>
                        <h2 class="h5 custom-gold">Fireworks</h2>
                        <p class="mb-0 custom-gold">Selling fireworks at the lowest prices to make sure that everyone can celebrate indenpendence.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

