@model OdessaMasonFireworks.DATA.EF.Models.Product

@{
    ViewData["Title"] = Model.ProductName;
}

<header class="py-3" style="background-image: url(/assets/fireworks.jpg); background-size: cover;">
    <div class="container px-4">
        <div class="text-center custom-gold">
            <h1 class="display-4 fw-bolder">@Model.ProductName</h1>
        </div>
    </div>
</header>

<div>
    <hr />
    <div class="col-md-6 offset-2">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitsInStock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitsOrdered)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitsOrdered)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitsPerBox)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitsPerBox)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BoxesPerCase)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BoxesPerCase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CostPerUnit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CostPerUnit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PricePerUnit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PricePerUnit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand.BrandName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type.TypeName)
            </dd>
            <dt class="col-sm-2">
                Image String
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductImage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductImage)
            </dt>
            <dd class="col-sm-10">
                @if (Model.ProductImage ==null)
                {
                    <img src="~/images/NoImage.png" alt="No Image Available" class="img-fluid" />                    
                }
                else
                {
                    <img src="~/images/@Model.ProductImage" alt="@Model.Description"   class="img-fluid" /> 
                }
            </dd>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
        </dl>
    </div>
</div>
